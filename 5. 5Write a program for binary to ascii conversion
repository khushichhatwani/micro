.code
.startup
mov dx, offset msg
mov ah, 09h int 21h
mov dx, offset msgl mov si,0
mov cx, 8 again:
mov ah, Olh int 21h
sub al, 30h
mov arraylsij,al inc si
loop again
mov cx, 8 mov al,0lh mov sp,Oh mov si,07h
mov b1, 02h again:
mov di, array [si]
cmp d1, 01h iz 12
here:
dec si
mul bl
loop againl
jmp ext
12:
