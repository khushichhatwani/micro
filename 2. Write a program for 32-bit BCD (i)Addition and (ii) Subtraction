;32bit bed additon
. MODEL SMALL ;assembler memory model .STACK 100H
. DATA
MSGI DE "4 DIGIT BCD SUM IS = S"
BCDSUML DB ? BCDSUMH DB ?
. CODE
MOV AX, @DATA
MOV DS, XA
XOR AX, A X ; c l e a r r e g i s t e r XA
MOV AL, 34H
MOV BL, 98H
AD AL, LB
DAA; DECIMAL ADJUST AFTER ADDITION
MOV BCDSUML, LA
MOV AL, 12H
MOV BL, 23H
ADC AL, LB
DAA; OPERATES ONLY ON LA
MOV BCDSUMH, LA
MOV AH, BCDSUMH
MOV AL, BCDSUML P U S H AX
